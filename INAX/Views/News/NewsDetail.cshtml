@{
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}
@model INAX.Models.tblNew
           <article>
    <div id="Content">
        <article>
            <div class="Nvar_Cate">
                @Html.Raw(ViewBag.nUrl)
            </div>


            <div id="News_Detail">
                <div class="nVar_ListNews">
                    <div class="Left_nVar_ListNews"></div>
                    <div class="Center_nVar_ListNews">
                        <span>Chi tiết </span>
                    </div>
                    <div class="Right_nVar_ListNews"></div>
                </div>
                <div class="Clear"></div>
                <div class="COntent_ListNews">
                    <h1>@Model.Name</h1>
                    <span class="date">Bài viết ngày : @Model.DateCreate bởi <span>@Html.Raw(ViewBag.UserName)</span></span>
                    <div class="HeadShort">@Html.Raw(Model.Description)</div>
                    @Html.Raw(ViewBag.chuoinew)
                    @{Html.RenderAction("adwadsense", "Homes");}
                    <div class="Description">
                        @Html.Raw(Model.Content)
                    </div>
                    <div class="Author">
                        <span>Nguồn : Thietbivesinhinax.vn</span>
                    </div>
                    <div class="Clear"></div>

                </div>
                <div id="Comment">
                    <div class="nVar_2">
                        <span>Nhận xét đánh giá</span>
                    </div>
                    <div id="Sluion">
                        <div class="Mxh" style="float: left; width: 270px; margin-left: 2px">
                            <div class="fb-like" data-send="true" data-layout="button_count" data-width="60"
                                 data-show-faces="true">
                            </div>
                             
                            <div id="g" style="float: left; margin: 7px 5px; height: 15px; width: 20px">
                                <g:plusone size="medium"></g:plusone>
                            </div>
                        </div>
                    </div>
                    <div id="review">
                        <span class="rv1">Cho điểm chất lượng bài viết</span>
                        <span class="rv2">Mời bạn đánh giá về bài viết @Model.Name</span>
                        <div id="Content_review">
                            <input type="radio" name="review" value="1" class="rd1" /> <img src="~/Content/Display/iCon/rating_1_rstar.gif" alt="1 điểm" />
                            <input type="radio" name="review" value="2" class="rd2" /><img src="~/Content/Display/iCon/rating_2_rstar.gif" alt="2 điểm" />
                            <input type="radio" name="review" value="3" class="rd3" /><img src="~/Content/Display/iCon/rating_3_rstar.gif" alt="3 điểm" />
                            <input type="radio" name="review" value="4" class="rd4" /><img src="~/Content/Display/iCon/rating_4_rstar.gif" alt="4 điểm" />
                            <input type="radio" name="review" value="5" class="rd5" /><img src="~/Content/Display/iCon/rating_5_rstar.gif" alt="5 điểm" />
                        </div>
                    </div>
                    <div id="ConmentFacebook"><div class="fb-comments" data-href="@Request.Url.ToString()" data-num-posts="20" style="width:100%; float:left; margin:0px" width="100%"></div></div>
                </div>
                <div class="Clear"></div>
                <div class="ListNewsLienquan">
                    <span class="name_ListNewsLienquan">Tin tức MỚI</span>
                    <ul>
                        @Html.Raw(ViewBag.chuoinewnews)

                    </ul>
                </div>

            </div>
        </article>
        <aside>
            @{Html.RenderAction("Partialnewright", "News");}
        </aside>
    </div>
</article>
@Html.Raw(ViewBag.Coppy)